FROM node:20.16.0-slim AS builder

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    xvfb \
    libnss3 \
    libgtk-3-0 \
    libgbm-dev \
    libasound2 \
    fonts-liberation \
    libgtk2.0-0 \
    libnotify-dev \
    libxss1 \
    libxtst6 \
    xauth && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /tmp/*

COPY package*.json ./
RUN npm install

COPY . .

# –û—Ç–∫—Ä—ã–≤–∞–µ–º –ø–æ—Ä—Ç—ã, –µ—Å–ª–∏ —Ç–µ—Å—Ç—ã —Ç—Ä–µ–±—É—é—Ç –∑–∞–ø—É—â–µ–Ω–Ω–æ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞
#EXPOSE 80 443 8080 3000

# –ó–∞–ø—É—Å–∫–∞–µ–º Cypress –≤ headless-—Ä–µ–∂–∏–º–µ
CMD ["npm", "run", "test"]
